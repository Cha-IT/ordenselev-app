generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model People {
  id           Int           @id @default(autoincrement())
  name         String
  class        Class
  completions  Completions[]
  dailyPersons DailyPerson[]
}

model Tasks {
  id             Int           @id @default(autoincrement())
  task           String
  days           Days[]
  completedBy    Completions[] @relation("CompletedTasks")
  nonCompletedBy Completions[] @relation("NonCompletedTasks")
}

model Completions {
  id                Int      @id @default(autoincrement())
  date              DateTime @default(now())
  studentId         Int
  image             Boolean  @default(false)
  comment           String?
  submission        Boolean  @default(false)
  student           People   @relation(fields: [studentId], references: [id])
  completedTasks    Tasks[]  @relation("CompletedTasks")
  nonCompletedTasks Tasks[]  @relation("NonCompletedTasks")
}

model DailyPerson {
  date     DateTime @id
  personId Int
  person   People   @relation(fields: [personId], references: [id])
}

enum Class {
  IM1
  IM2
  IT1
  IT2
  MP1
}

enum Days {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
}
