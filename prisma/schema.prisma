generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model People {
  id          Int           @id @default(autoincrement())
  name        String
  class       Class
  completions Completions[]
}

model Tasks {
  id             Int           @id @default(autoincrement())
  task           String
  days           Days
  completedBy    Completions[] @relation("CompletedTasks")
  nonCompletedBy Completions[] @relation("NonCompletedTasks")
}

model Completions {
  id                Int      @id @default(autoincrement())
  date              DateTime @default(now())
  studentId         Int
  image1            String?
  image2            String?
  comment           String?
  submission        Boolean  @default(false)
  student           People   @relation(fields: [studentId], references: [id])
  completedTasks    Tasks[]  @relation("CompletedTasks")
  nonCompletedTasks Tasks[]  @relation("NonCompletedTasks")
}

enum Class {
  IM1
  IM2
  IT1
  IT2
  MP1
}

enum Days {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
}
